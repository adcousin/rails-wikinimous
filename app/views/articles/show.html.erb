<div class="container">
  <h1>Articles show</h1>
  <div class="container w-75">
    <h3 class="d-flex justify-content-between">
      <div class="btn border rounded">
        <%= link_to "<i class='fas fa-dumpster-fire'></i>".html_safe,
        article_path(@article),
        method: :delete,
        data: { confirm: "Are you sure you want to delete #{@article.title}?" } %>
      </div>
      <div>
        <%= link_to @article.title.capitalize, article_path(@article) %>
      </div>
      <div class="btn border rounded">
        <%= link_to '<i class="fas fa-pen pr-1"></i> Edit'.html_safe, edit_article_path(@article) %>
      </div>
    </h3>
    <div class="w-75 m-auto">
      <%= @article.content%>
    </div>
  </div>
  <div class="my-3">
    <%= link_to "<i class='fas fa-undo pr-2'></i> Back to index".html_safe, articles_path %>
  </div>
</div>
