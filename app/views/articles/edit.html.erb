<h1>Articles#edit</h1>
<div class="container">
  <%= simple_form_for(@article) do |f| %>
    <%= f.input :title %>
    <%= f.input :content %>
    <%= f.input :is_read, as: :boolean unless @article.new_record?  %>
    <%= f.submit %>
  <% end %>
  <div class="my-3">
    <%= link_to "<i class='fas fa-undo pr-2'></i> Back to index".html_safe, articles_path %>
  </div>
</div>
